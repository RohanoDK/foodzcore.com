@page
@model foodzcore.Pages.Recipes.RecipeCRUD.CreateRecipeModel
@{
}

<form method="post">

    <!-- RecipeName input -->
    <div>
        <label for="RecipeName">Recipe Name:</label>
        <input asp-for="RecipeName" class="form-control" />
        <span asp-validation-for="RecipeName"></span>
    </div>

    <!-- Description input -->
    <div>
        <label for="Description">Description:</label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description"></span>
    </div>

    <!-- Price input -->
    <div>
        <label for="Price">Price:</label>
        <input asp-for="Price" type="number" step="0.01" class="form-control" />
        <span asp-validation-for="Price"></span>
    </div>

    <!-- DifficultyRating input -->
    <div>
        <label for="DifficultyRating">Difficulty Rating:</label>
        <input asp-for="DifficultyRating" type="number" class="form-control" min="1" max="5" />
        <span asp-validation-for="DifficultyRating"></span>
    </div>

    <!-- TimeRating input -->
    <div>
        <label for="TimeRating">Time Rating:</label>
        <input asp-for="TimeRating" type="number" class="form-control" min="1" max="10" />
        <span asp-validation-for="TimeRating"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create Recipe</button>
</form>