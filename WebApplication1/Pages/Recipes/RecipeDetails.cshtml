@page
@using foodzcore.Pages.Login
@using foodzcore.Pages.Profile
@model foodzcore.Pages.Recipes.RecipeDetailsModel
@{
}

<div class="explorebgimage">
    <div class="explorewrapper">
        <div class="explorerecipeswrapper">
            <img class="recipeimage" src="@Model.Recipe.Image" alt="@Model.Recipe.RecipeName" />
            <h3 style="text-align:center;">@Model.Recipe.RecipeName</h3>
            <p>Description: @Model.Recipe.Description</p>
            <p>Price: @Model.Recipe.Price DKK</p>
            <p>Difficulty Rating: @Model.Recipe.DifficultyRating</p>
            <p>Time Rating: @Model.Recipe.TimeRating</p>
        </div>
    </div>
    @{
        if (LoginModel.LoggedInUser != null && LoginModel.LoggedInUser.Role == "admin")
        {
            <form method="post">
                <button type="submit" asp-page-handler="Delete" asp-route-id="@Model.Recipe.RecipeID" onclick="return confirm('Are you sure you want to delete this recipe?')" class="btn btn-danger">Delete Recipe</button>
            </form>

            <a asp-page="/Recipes/RecipeCRUD/UpdateRecipe" asp-route-id="@Model.Recipe.RecipeID" class="btn btn-primary">Update Recipe</a>
        }
    }   
</div>