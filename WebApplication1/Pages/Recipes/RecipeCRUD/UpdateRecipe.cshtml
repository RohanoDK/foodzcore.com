@page
@model foodzcore.Pages.Recipes.RecipeCRUD.UpdateRecipeModel
@{
    ViewData["Title"] = "Update Recipe";
}

<h2>@ViewData["Title"]</h2>

<form method="post">
    <input type="hidden" asp-for="RecipeItem.RecipeID" />

    <!-- RecipeName input -->
    <div class="form-group">
        <input asp-for="RecipeItem.RecipeName" class="form-control" />
        <span asp-validation-for="RecipeItem.RecipeName" class="text-danger"></span>
    </div>

    <!-- Description input -->
    <div class="form-group">
        <textarea asp-for="RecipeItem.Description" class="form-control"></textarea>
        <span asp-validation-for="RecipeItem.Description" class="text-danger"></span>
    </div>

    <!-- Price input -->
    <div class="form-group">
        <input asp-for="RecipeItem.Price" type="number" step="0.01" class="form-control" />
        <span asp-validation-for="RecipeItem.Price" class="text-danger"></span>
    </div>

    <!-- DifficultyRating input -->
    <div class="form-group">
        <input asp-for="RecipeItem.DifficultyRating" type="number" class="form-control" min="1" max="5" />
        <span asp-validation-for="RecipeItem.DifficultyRating" class="text-danger"></span>
    </div>

    <!-- TimeRating input -->
    <div class="form-group">
        <input asp-for="RecipeItem.TimeRating" type="number" class="form-control" min="1" max="10" />
        <span asp-validation-for="RecipeItem.TimeRating" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Update Recipe</button>
</form>